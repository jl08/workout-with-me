<h3 id='match_page_header'><%= "Here are your matches  " + current_user.name %></h3>
<% @initiator_matches.each do |match| %>
  <%= link_to match.responder.name, match_messages_path(match) %>
  <p>Rating</p>
  <% if match.responder.average_rating == nil %>
    <p>This user has no ratings yet</p>
  <% else %>
    <%= match.responder.average_rating %>
  <% end %>
<% end %>

